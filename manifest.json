{
  "manifest_version": 2,
  "name": "Price Tracker",
  "version": "0.1.0",
  "description": "Track product prices and get notified when they change.",
  "permissions": ["storage", "alarms", "notifications", "activeTab", "tabs", "<all_urls>"],
  "background": { "scripts": ["background.js"], "persistent": false },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
