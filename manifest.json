{
  "manifest_version": 2,
  "name": "Price Tracker",
  "version": "0.1.4",
  "description": "Track product prices and get notified when they change.",
  "permissions": ["storage", "alarms", "notifications", "activeTab", "tabs", "<all_urls>"],
  "background": { "scripts": ["src/background.js"], "persistent": false },
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "price-tracker@examples.local",
      "strict_min_version": "60.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": [],
        "other": ["This extension does not collect personal user data."]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_script.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
